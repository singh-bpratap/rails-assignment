<div class="d-flex align-items-center flex-column justify-content-center h-100" id="header">
  <h2>Sign in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control form-control-lg" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="form-group">
      <button class="btn btn-info btn-lg btn-block" type="submit">Sign In</button>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
